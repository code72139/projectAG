@{
    ViewData["Title"] = "Panel de Control";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-tachometer-alt me-2"></i>Panel de Control</h1>
</div>

<div class="row">
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Gastos del Mes</h6>
                    <h3 class="mb-0">@ViewBag.GastosMes?.ToString("C")</h3>
                </div>
                <div class="text-primary">
                    <i class="fas fa-chart-line fa-2x"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Presupuesto Disponible</h6>
                    <h3 class="mb-0">@ViewBag.PresupuestoDisponible?.ToString("C")</h3>
                </div>
                <div class="text-success">
                    <i class="fas fa-wallet fa-2x"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Total en Fondos</h6>
                    <h3 class="mb-0">@ViewBag.TotalFondos?.ToString("C")</h3>
                </div>
                <div class="text-info">
                    <i class="fas fa-piggy-bank fa-2x"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Registros de gastos</h6>
                    <h3 class="mb-0">@ViewBag.RegistrosPendientes</h3>
                </div>
                <div class="text-warning">
                    <i class="fas fa-clock fa-2x"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Acciones Rápidas</h5>
                <div class="d-flex gap-2 flex-wrap">
                    <a href="@Url.Action("Create", "RegistroGastos")" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Nuevo Gasto
                    </a>
                    <a href="@Url.Action("Create", "Depositos")" class="btn btn-success">
                        <i class="fas fa-money-bill-wave me-2"></i>Nuevo Depósito
                    </a>
                    <a href="@Url.Action("GraficoComparativo", "Reportes")" class="btn btn-info">
                        <i class="fas fa-chart-bar me-2"></i>Ver Reportes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}