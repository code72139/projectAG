<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión de Gastos</title>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project_AG.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Dashboard">
                    <i class="fas fa-wallet me-2"></i>Gestión de Gastos
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="mantenimientosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mantenimientos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="mantenimientosDropdown">
                                <li><a class="dropdown-item" asp-controller="TipoGasto" asp-action="Index">Tipos de Gasto</a></li>
                                <li><a class="dropdown-item" asp-controller="FondoMonetario" asp-action="Index">Fondo Monetario</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="movimientosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Movimientos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="movimientosDropdown">
                                <li><a class="dropdown-item" asp-controller="PresupuestosTiposGastos" asp-action="Index">Presupuesto por Tipo de Gasto</a></li>
                                <li><a class="dropdown-item" asp-controller="RegistroGastos" asp-action="Index">Registros de Gastos</a></li>
                                <li><a class="dropdown-item" asp-controller="Depositos" asp-action="Index">Depósitos</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="consultasDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Consultas y Reportes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="consultasDropdown">
                                <li><a class="dropdown-item" asp-controller="RegistroGastos" asp-action="ConsultaMovimientos">Consulta de Movimientos</a></li>
                                <li><a class="dropdown-item" asp-controller="Reportes" asp-action="GraficoComparativo">Gráfico Comparativo</a></li>
                            </ul>
                        </li>

                    </ul>
                    <div class="d-flex align-items-center">
                        @if (Context.Session.GetString("UsuarioLogeado") != null)
                        {
                            <form asp-controller="Home" asp-action="Logout" method="post" class="mb-0">
                                <button type="submit" class="btn btn-link nav-link" style="padding:0; border:none; background:none;">
                                    Cerrar sesión (@Context.Session.GetString("UsuarioLogeado"))
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Iniciar sesión</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            🦖Gracias por visitar
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
