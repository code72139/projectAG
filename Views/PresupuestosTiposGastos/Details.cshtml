@model Project_AG.Models.PresupuestoTipoGasto

@{
    ViewData["Title"] = "Detalles del Presupuesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-money-check-alt me-2"></i>Detalles del Presupuesto</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title mb-4">Información del Presupuesto</h5>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="text-muted mb-1">@Html.DisplayNameFor(model => model.Usuario)</label>
                    <div class="fw-medium">@Html.DisplayFor(model => model.Usuario.NombreUsuario)</div>
                </div>
                <div class="mb-3">
                    <label class="text-muted mb-1">@Html.DisplayNameFor(model => model.TipoGasto)</label>
                    <div class="fw-medium">@Html.DisplayFor(model => model.TipoGasto.Nombre)</div>
                </div>
                <div class="mb-3">
                    <label class="text-muted mb-1">@Html.DisplayNameFor(model => model.MontoPresupuestado)</label>
                    <div class="fw-medium text-primary">@Model.MontoPresupuestado.ToString("C")</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="text-muted mb-1">@Html.DisplayNameFor(model => model.Mes)</label>
                    <div class="fw-medium">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Mes)</div>
                </div>
                <div class="mb-3">
                    <label class="text-muted mb-1">@Html.DisplayNameFor(model => model.Anio)</label>
                    <div class="fw-medium">@Model.Anio</div>
                </div>
            </div>
        </div>
    </div>
</div>
