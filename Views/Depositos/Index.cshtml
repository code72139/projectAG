@model IEnumerable<Project_AG.Models.Deposito>

@{
    ViewData["Title"] = "Lista de Depósitos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-money-bill-wave me-2"></i>Depósitos</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nuevo Depósito
    </a>
</div>

<div class="card">    <div class="card-body">
            <table class="table table-hover table-stack">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeposito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FondoMonetario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.FechaDeposito.ToString("D")
            </td>
            <td>
                @item.Monto.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FondoMonetario.NombreFondo)
            </td>            <td class="action-buttons">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                    <i class="fas fa-edit"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
