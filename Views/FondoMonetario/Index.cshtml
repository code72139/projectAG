@model IEnumerable<Project_AG.Models.FondoMonetario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-wallet me-2"></i>Fondos Monetarios</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nuevo Fondo    </a>
</div>

<div class="card">    <div class="card-body">
            <table class="table table-hover table-stack">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreFondo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoFondoMonetario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionFondo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstaActivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreFondo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoFondoMonetario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionFondo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstaActivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>            <td class="action-buttons">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                    <i class="fas fa-edit"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
}           </tbody>
            </table>
        </div>
    </div>
</div>
    </tbody>
</table>
