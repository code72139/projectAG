@model Project_AG.Models.FondoMonetario

@{
    ViewData["Title"] = "Editar Fondo Monetario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-wallet me-2"></i>Editar Fondo Monetario</h1>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FechaCreacion" />

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="NombreFondo" class="form-label"></label>
                        <input asp-for="NombreFondo" class="form-control" />
                        <span asp-validation-for="NombreFondo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">                        <label asp-for="TipoFondoMonetario" class="form-label"></label>
                        <select asp-for="TipoFondoMonetario" class="form-control" 
                                asp-items="Html.GetEnumSelectList<Project_AG.Models.TipoFondo>()">
                        </select>
                        <span asp-validation-for="TipoFondoMonetario" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="DescripcionFondo" class="form-label"></label>
                        <textarea asp-for="DescripcionFondo" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DescripcionFondo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="EstaActivo" class="form-check-input" />
                            <label asp-for="EstaActivo" class="form-check-label"></label>
                        </div>
                        <span asp-validation-for="EstaActivo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

